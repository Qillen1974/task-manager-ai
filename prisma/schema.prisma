// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - represents a registered user
model User {
  id            String     @id @default(cuid())
  email         String     @unique
  passwordHash  String     // bcrypt hashed password
  firstName     String?    // User's first name
  lastName      String?    // User's last name
  name          String?    // Full name (legacy field, kept for backward compatibility)
  isAdmin       Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  lastLoginAt   DateTime?

  // Relations
  projects      Project[]
  tasks         Task[]
  subscription  Subscription?
  sessions      Session[]
  settings      UserSettings?
  mindMaps      MindMap[]
  assignments   TaskAssignment[]
  teamMemberships TeamMember[]
  chatConversations ChatConversation[]
  bugReports    BugReport[]
  workspaceDocuments WorkspaceDocument[] @relation("UserDocuments")  // Documents uploaded by user
  stickyNotesFrom    StickyNote[]  @relation("StickyNotesFrom")  // Notes sent by user
  stickyNotesTo      StickyNote[]  @relation("StickyNotesTo")    // Notes received by user
  workspaceActivities WorkspaceActivity[]  // Activities performed by user
  notifications Notification[]  // Notifications sent to user
  notificationPreferences NotificationPreference?  // User's notification settings

  @@index([email])
}

// UserSettings model - stores user preferences
model UserSettings {
  id                              String   @id @default(cuid())
  userId                          String   @unique
  user                            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Auto-prioritization settings
  enableAutoPrioritization        Boolean  @default(true)  // Enable automatic priority adjustment based on due date
  autoPrioritizationThresholdHours Int     @default(48)    // Hours until due date to trigger auto-prioritization

  // Completed task cleanup settings
  completedTaskRetentionDays      Int      @default(30)    // Days to keep completed tasks (FREE: max 90, PRO/ENTERPRISE: max 365)

  createdAt                       DateTime @default(now())
  updatedAt                       DateTime @updatedAt

  @@index([userId])
}

// Session model - for tracking logged-in sessions
model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

// Subscription model - manages user subscription plans
model Subscription {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Subscription details
  plan              SubscriptionPlan @default(FREE)
  status            SubscriptionStatus @default(ACTIVE)
  stripeCustomerId  String?
  stripeSubId       String?

  // Billing dates
  currentPeriodStart DateTime?
  currentPeriodEnd  DateTime?
  cancelledAt       DateTime?

  // Limits (enforced by plan)
  projectLimit      Int      @default(3)    // FREE: 3, PRO: 5, ENTERPRISE: unlimited
  taskLimit         Int      @default(50)   // FREE: 50, PRO: unlimited, ENTERPRISE: unlimited

  // Project hierarchy limits
  maxProjectNestingLevel Int @default(0)   // FREE: 0 (no subprojects), PRO: 1 (one level), ENTERPRISE: unlimited
  maxSubprojectsPerProject Int @default(0) // FREE: 0, PRO: unlimited, ENTERPRISE: unlimited

  // Recurring task limits
  recurringTaskLimit Int @default(0)       // FREE: 0 (disabled), PRO: 10, ENTERPRISE: unlimited

  // Payment tracking
  paymentMethod     String?              // "stripe" or "paypal"
  lastPaymentId     String?              // Stripe PaymentIntent ID or PayPal transaction ID
  lastPaymentDate   DateTime?            // Date of last successful payment

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
  @@index([stripeCustomerId])
}

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  SUSPENDED
  EXPIRED
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
  ON_HOLD
}

// Project model - represents a task project with hierarchical support
model Project {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Team association (optional - for ENTERPRISE team collaboration)
  teamId            String?
  team              Team?    @relation(fields: [teamId], references: [id], onDelete: SetNull)

  name              String
  color             String   @default("blue")
  description       String?

  // Hierarchical project support
  parentProjectId   String?
  parentProject     Project? @relation("ProjectHierarchy", fields: [parentProjectId], references: [id], onDelete: Cascade)
  childProjects     Project[] @relation("ProjectHierarchy")

  // Project metadata
  status            ProjectStatus @default(ACTIVE)  // ACTIVE, ARCHIVED, COMPLETED
  projectLevel      Int      @default(0)            // 0 = root project
  readOnlyUntil     DateTime?                         // Set when user downgrades/cancels - items are read-only until this date

  // Professional features
  startDate         DateTime?
  endDate           DateTime?
  budget            Float?
  budget_currency   String?  @default("USD")
  owner             String?                           // Project owner/lead name
  metadata          String?                           // JSON string for custom fields

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  tasks             Task[]

  @@index([userId])
  @@index([teamId])
  @@index([parentProjectId])
  @@index([status])
}

// Task model - represents an individual task
model Task {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  title         String
  description   String?
  priority      String?  // Eisenhower matrix priority (optional - null means task doesn't appear in matrix)

  completed     Boolean  @default(false)
  completedAt   DateTime?
  progress      Int      @default(0)  // Task progress percentage (0-100)
  readOnlyUntil DateTime?              // Set when user downgrades/cancels - task is read-only until this date

  startDate     DateTime?
  startTime     String?
  dueDate       DateTime?
  dueTime       String?

  // Resource allocation (optional)
  resourceCount Int?                  // Number of people assigned to task
  manhours      Float?                // Total manhours allocated to task

  // Task dependencies (optional)
  dependsOnTaskId String?
  dependsOnTask    Task?   @relation("TaskDependencies", fields: [dependsOnTaskId], references: [id], onDelete: SetNull)
  dependentTasks   Task[]  @relation("TaskDependencies")

  // Recurring task fields
  isRecurring     Boolean   @default(false)               // Whether this is a recurring task template
  recurringPattern String?                               // Pattern type: DAILY, WEEKLY, MONTHLY, CUSTOM
  recurringConfig String?                                // JSON string with pattern configuration
  recurringStartDate DateTime?                           // When recurrence should start
  recurringEndDate DateTime?                             // When recurrence should stop (optional)
  nextGenerationDate DateTime?                           // When next instance should be generated
  lastGeneratedDate DateTime?                            // When last instance was generated
  parentTaskId    String?                                // Reference to parent recurring task (null for parent/one-off)
  parentTask      Task?     @relation("RecurringTasks", fields: [parentTaskId], references: [id], onDelete: Cascade)
  childTasks      Task[]    @relation("RecurringTasks")  // Generated instances of this recurring task

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  assignments   TaskAssignment[]  // Task assignments to team members

  @@index([userId])
  @@index([projectId])
  @@index([completed])
  @@index([dependsOnTaskId])
  @@index([parentTaskId])
  @@index([isRecurring])
  @@index([nextGenerationDate])
}

enum TaskAssignmentRole {
  OWNER        // Primary owner/assignee - responsible for completion
  COLLABORATOR // Helping with the task
  REVIEWER     // Reviewing/approving the task
}

// TaskAssignment model - tracks task assignments to team members
model TaskAssignment {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId    String   // User assigned to this task
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  role      TaskAssignmentRole @default(COLLABORATOR)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([taskId, userId])            // Each user can only be assigned once per task
  @@index([taskId])
  @@index([userId])
}

// AuditLog model - track all important actions for compliance
model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // e.g., "TASK_CREATED", "USER_LOGIN", "SUBSCRIPTION_UPGRADE"
  resource  String   // e.g., "task", "user", "subscription"
  details   String   // JSON string with details
  ipAddress String?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
}

// Team model - for team collaboration (ENTERPRISE feature)
model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique          // URL-friendly team identifier
  ownerId   String                     // ID of the user who created the team

  description String?

  // Team settings
  isPublic  Boolean  @default(false)  // Whether team is publicly visible

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members      TeamMember[]
  invitations  TeamInvitation[]         // Pending team invitations
  projects     Project[]                // Projects owned by this team
  mindMaps     MindMap[]                // Mind maps created by this team (ENTERPRISE feature)
  workspace    Workspace?               // Collaborative workspace for this team

  @@index([ownerId])
  @@index([slug])
}

enum TeamRole {
  ADMIN      // Full access, can manage team and members
  EDITOR     // Can edit projects and tasks
  VIEWER     // Read-only access
}

// TeamMember model - tracks users in a team and their roles
model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  role      TeamRole @default(VIEWER)   // Role within the team

  // Invitation tracking
  invitedAt DateTime @default(now())
  acceptedAt DateTime?                  // Null if invitation pending
  invitedBy String?                     // ID of user who sent the invitation

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, userId])            // Each user can only be in a team once
  @@index([teamId])
  @@index([userId])
  @@index([acceptedAt])                 // For finding pending invitations
}

// TeamInvitation model - tracks pending invitations
model TeamInvitation {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  email     String                      // Email address being invited
  role      TeamRole @default(VIEWER)   // Role being offered

  token     String   @unique            // Unique token for invitation link
  expiresAt DateTime                    // When invitation expires

  createdBy String                      // ID of user who created invitation
  createdAt DateTime @default(now())

  @@unique([teamId, email])             // Can't invite same email twice to same team
  @@index([token])
  @@index([teamId])
}

// ApiKey model - for third-party integrations
model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  name      String
  key       String   @unique
  lastUsedAt DateTime?

  createdAt DateTime @default(now())

  @@index([userId])
}

// Feedback model - for user feedback and feature requests
model Feedback {
  id        String   @id @default(cuid())
  userId    String?
  email     String?
  type      String   // "bug", "feature_request", "general"
  title     String
  message   String

  resolved  Boolean  @default(false)
  resolvedAt DateTime?

  createdAt DateTime @default(now())

  @@index([type])
}

// SchedulerState model - tracks the last time scheduler was run to prevent duplicates on deployment
model SchedulerState {
  id            String   @id @default("recurring-task-scheduler")
  lastRunDate   DateTime @default(now())
  isRunning     Boolean  @default(false)
  lastError     String?
  updatedAt     DateTime @updatedAt
}

// MindMap model - stores user-created mind maps before conversion to projects/tasks
model MindMap {
  id            String   @id @default(cuid())

  // Ownership: Either user-owned (userId set) OR team-owned (teamId set), not both
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  teamId        String?
  team          Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  title         String
  description   String?

  // Mind map data structure stored as JSON
  nodes         String   // JSON array of nodes: { id, label, description, color, metadata }
  edges         String   // JSON array of connections: { id, source, target, label }

  // Conversion tracking
  isConverted   Boolean  @default(false)
  convertedAt   DateTime?
  rootProjectId String?  // ID of the root project created from this mind map (if converted)

  // Node to project/task mapping for smart re-conversion
  nodeToResourceMap String? // JSON object mapping node IDs to { type: "project"|"task", id: string }

  // Audit fields for team collaboration
  createdBy     String?  // User ID who created this mind map (useful for team maps)
  lastModifiedBy String? // User ID who last modified this mind map

  // Visibility: PRIVATE (owner only) or TEAM (team members)
  visibility    String   @default("PRIVATE")

  // Metadata
  nodeCount     Int      @default(0)  // For quick validation against limits
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([teamId])
  @@index([isConverted])
}

// AI Butler Knowledge Base - stores documentation and FAQs
model KnowledgeBase {
  id          String   @id @default(cuid())
  category    String   // "user-guide", "faq", "feature-doc", "troubleshooting"
  title       String
  content     String   @db.Text  // Markdown content
  keywords    String?  // Comma-separated keywords for search
  priority    Int      @default(0)  // Higher priority = shows up more in searches
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isActive])
}

// AI Butler Configuration - admin settings
model AIButlerConfig {
  id                String   @id @default(cuid())
  activeModel       String   @default("openai")  // "openai", "anthropic", "gemini", "custom"
  openaiApiKey      String?  // Encrypted - will store encrypted value
  anthropicApiKey   String?  // Encrypted
  geminiApiKey      String?  // Encrypted
  customEndpoint    String?  // For self-hosted models
  systemPrompt      String   @db.Text  // Instructions for the AI butler
  maxTokens         Int      @default(1000)
  temperature       Float    @default(0.7)  // 0-1, controls randomness

  // Feature flags
  enableBugReporting Boolean @default(true)
  enableKBSuggestions Boolean @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Chat Conversation - stores chat sessions
model ChatConversation {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String?  // Auto-generated title from first message
  messages    ChatMessage[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

// Chat Message - individual messages in conversation
model ChatMessage {
  id              String   @id @default(cuid())
  conversationId  String
  conversation    ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  role            String   // "user" or "assistant"
  content         String   @db.Text
  modelUsed       String?  // "gpt-4", "gpt-3.5-turbo", "claude-3", "gemini-pro", etc.
  tokensUsed      Int?     // For tracking costs

  createdAt       DateTime @default(now())

  @@index([conversationId])
  @@index([role])
}

// Bug Report - submitted by user via AI butler
model BugReport {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title           String
  description     String   @db.Text
  userContext     String   @db.Text  // Browser, page URL, OS, error details
  screenshot      String?  // URL to uploaded screenshot

  status          String   @default("open")  // "open", "assigned", "in-progress", "resolved"
  resolution      String?  @db.Text  // How it was resolved

  emailSent       Boolean  @default(false)
  sentAt          DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// Workspace - collaborative space for teams to share documents and notes
model Workspace {
  id              String   @id @default(cuid())
  teamId          String
  team            Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  name            String
  description     String?  @db.Text

  // Relations
  documents       WorkspaceDocument[]
  stickyNotes     StickyNote[]
  activities      WorkspaceActivity[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([teamId])  // One workspace per team
  @@index([teamId])
}

// WorkspaceDocument - files uploaded to workspace
model WorkspaceDocument {
  id              String   @id @default(cuid())
  workspaceId     String
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  fileName        String
  originalName    String   // Original filename as uploaded
  fileType        String   // pdf, xlsx, txt, jpg, png, etc.
  fileUrl         String   // URL to stored file
  fileSize        Int      // File size in bytes
  fileContent     Bytes?   // Actual file content (stored as binary)

  uploadedBy      String
  uploadedByUser  User     @relation("UserDocuments", fields: [uploadedBy], references: [id], onDelete: Cascade)

  folder          String?  @default("root")  // Folder path: "root", "folder1", "folder1/subfolder"
  tags            String?  // Comma-separated tags
  description     String?  @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([workspaceId])
  @@index([uploadedBy])
  @@index([folder])
  @@index([createdAt])
}

// StickyNote - member-to-member messages/reminders
model StickyNote {
  id              String   @id @default(cuid())
  workspaceId     String
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  fromUserId      String
  fromUser        User     @relation("StickyNotesFrom", fields: [fromUserId], references: [id], onDelete: Cascade)

  toUserId        String
  toUser          User     @relation("StickyNotesTo", fields: [toUserId], references: [id], onDelete: Cascade)

  content         String   @db.Text
  color           String   @default("yellow")  // yellow, pink, blue, green, purple, orange

  isRead          Boolean  @default(false)
  readAt          DateTime?

  expiresAt       DateTime?  // Optional expiration date
  isArchived      Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([workspaceId])
  @@index([fromUserId])
  @@index([toUserId])
  @@index([isRead])
  @@index([createdAt])
}

// WorkspaceActivity - audit log of workspace actions
model WorkspaceActivity {
  id              String   @id @default(cuid())
  workspaceId     String
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  actorId         String
  actor           User     @relation(fields: [actorId], references: [id], onDelete: Cascade)

  type            String   // "document_uploaded", "sticky_note_added", "document_deleted", etc.
  description     String
  metadata        Json?    // Additional context

  createdAt       DateTime @default(now())

  @@index([workspaceId])
  @@index([actorId])
  @@index([type])
  @@index([createdAt])
}

// Notification - in-app notifications for team collaboration events
model Notification {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type            String   // "task_assigned", "team_invitation", "document_uploaded", "sticky_note_received", "task_completed"
  title           String
  message         String   @db.Text

  // Related resource IDs for linking back to source
  relatedTaskId   String?
  relatedTeamId   String?
  relatedDocumentId String?
  relatedUserId   String?  // User who triggered the notification

  isRead          Boolean  @default(false)
  readAt          DateTime?

  // Notification delivery preferences
  sentViaEmail    Boolean  @default(false)
  emailSentAt     DateTime?

  metadata        Json?    // Additional context

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([isRead])
  @@index([type])
  @@index([createdAt])
}

// NotificationPreference - user's notification settings
model NotificationPreference {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Email notification preferences
  emailTaskAssignments    Boolean @default(true)
  emailTeamInvitations    Boolean @default(true)
  emailDocumentUploads    Boolean @default(false)
  emailStickyNotes        Boolean @default(false)
  emailTaskCompletions    Boolean @default(false)

  // In-app notification preferences
  inAppTaskAssignments    Boolean @default(true)
  inAppTeamInvitations    Boolean @default(true)
  inAppDocumentUploads    Boolean @default(true)
  inAppStickyNotes        Boolean @default(true)
  inAppTaskCompletions    Boolean @default(true)

  // General preferences
  digestFrequency         String  @default("immediate")  // "immediate", "daily", "weekly", "never"
  notificationsMuted      Boolean @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}
