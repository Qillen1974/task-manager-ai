# Database
DATABASE_URL=postgresql://user:password@localhost:5432/taskquadrant

# JWT Secrets
ACCESS_TOKEN_SECRET=your_access_token_secret_here_min_32_chars
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_chars

# Stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email Configuration - Using Resend
# Resend is a modern email service built for developers
# Sign up at https://resend.com

# REQUIRED FOR EMAIL SENDING:
# 1. Sign up at https://resend.com (free tier available)
# 2. Add and verify your domain in Resend dashboard
# 3. Add the DNS TXT record provided by Resend:
#    - Name: resend._domainkey
#    - Value: p=<your_public_key_from_resend>
#    - Add this record at your domain registrar (Hostinger, Namecheap, etc.)
# 4. Generate an API key from Resend dashboard
# 5. Set the API key below

RESEND_API_KEY=your_resend_api_key_here
SMTP_FROM=support@taskquadrant.io

# For testing without a custom domain:
# Use SMTP_FROM=anything@resend.dev (Resend provides a test domain)
# This works in development but won't look professional in production

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Scheduler
ENABLE_SCHEDULER=true
