# Database
DATABASE_URL=postgresql://user:password@localhost:5432/taskquadrant

# JWT Secrets
ACCESS_TOKEN_SECRET=your_access_token_secret_here_min_32_chars
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_chars

# Stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email Configuration
# For development: Leave empty to use Ethereal Email (free test email service)
# For production: Configure one of the email providers below

# Option 1: Gmail (RECOMMENDED FOR QUICK START)
# 1. Create a new Gmail account (e.g., taskquadrantapp@gmail.com)
# 2. Enable 2-Factor Authentication on your Google Account
# 3. Generate an App Password at https://myaccount.google.com/apppasswords
# 4. Use the generated 16-character app password below (without spaces)
EMAIL_FROM=TaskQuadrantAlert@gmail.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=TaskQuadrantAlert@gmail.com
EMAIL_PASSWORD=your-16-char-app-password

# Option 2: Outlook/Office365
# EMAIL_FROM=your-email@outlook.com
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASSWORD=your-password

# Option 3: SendGrid
# EMAIL_FROM=noreply@yourapp.com
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=SG.your_sendgrid_api_key

# Option 4: AWS SES
# EMAIL_FROM=noreply@yourapp.com
# EMAIL_HOST=email-smtp.region.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USER=your-smtp-username
# EMAIL_PASSWORD=your-smtp-password

# Option 5: Ethereal Email (for development only)
# Create a test account at https://ethereal.email/create
# ETHEREAL_EMAIL=your_ethereal_email
# ETHEREAL_PASSWORD=your_ethereal_password

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Scheduler
ENABLE_SCHEDULER=true
